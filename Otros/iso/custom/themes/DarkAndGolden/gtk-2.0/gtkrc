	fg[PRELIGHT] 		= @text_color
    fg[ACTIVE]          = @text_color
    fg[INSENSITIVE]     = "#A3A8AD"

    engine "pixmap"
    {
		#panel-shadows-remove
			image 
			{
			function = SHADOW
			}

		#panel-lines-remove
			image
			{
			function		= VLINE
			recolorable		= TRUE
			file			= "Assets/NoColor.png"
			border			= { 0,0,0,0 }
			stretch			= TRUE
			}
