style "toolbar"
{
    xthickness = 2
    ythickness = 2

    bg[NORMAL]      = @bg_color

	engine "pixmap" 
    {
        image 
        {
        function    = BOX
        file	    = "Assets/bg.svg"
        border      = { 1,1,1,1 }
        stretch	    = TRUE
        }

		# Handles
			image
			{
			function			= HANDLE
			state               = NORMAL
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-h.svg"
			overlay_border		= {1,1,0,1 }
			overlay_stretch		= FALSE
			orientation			= HORIZONTAL
			}

			image
			{
			function			= HANDLE
			state               = PRELIGHT
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-h-active.svg"
			overlay_border		= {1,1,0,1 }
			overlay_stretch		= FALSE
			orientation			= HORIZONTAL
			}

			image
			{
			function			= HANDLE
			state               = ACTIVE
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-h-active.svg"
			overlay_border		= {1,1,0,1 }
			overlay_stretch		= FALSE
			orientation			= HORIZONTAL
			}

			image
			{
			function			= HANDLE
			state               = INSENSITIVE
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-h.svg"
			overlay_border		= {1,1,0,1 }
			overlay_stretch		= FALSE
			orientation			= HORIZONTAL
			}


			image
			{
			function			= HANDLE
			state               = NORMAL
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-v.svg"
			overlay_border		= {1,0,1,1 }
			overlay_stretch		= FALSE
			orientation			= VERTICAL
			}
			
			image
			{
			function			= HANDLE
			state               = PRELIGHT
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-v-active.svg"
			overlay_border		= {1,0,1,1 }
			overlay_stretch		= FALSE
			orientation			= VERTICAL
			}

			image
			{
			function			= HANDLE
			state               = ACTIVE
			recolorable			= TRUE
			file				= "Assets/bg.svg"
			overlay_file		= "Assets/handle-v-active.svg"
			overlay_border		= {1,0,1,1 }
			overlay_stretch		= FALSE
			orientation			= VERTICAL
			}

			image
			{
			function			= HANDLE
			state               = INSENSITIVE
			recolorable			= TRUE
			file				= "Assets/bg.svg"
