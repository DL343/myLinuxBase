style "notebook"
{    
    xthickness	= 4
    ythickness	= 4
	GtkWidget::focus-line-width	= 1

        bg[NORMAL] = @bg_color
        bg[ACTIVE] = @base_color

	engine "pixmap" 
	{
            image {
            function    = EXTENSION
            state       = ACTIVE
			file		= "Buttons/button-normal.svg"		
			border		= { 1,1,1,1 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = TOP
            }

            image {
            function    = EXTENSION
            state       = ACTIVE
			file		= "Buttons/button-normal.svg"		
			border		= { 1,1,1,1 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = BOTTOM
            }

            image {
            function    = EXTENSION
            state       = ACTIVE
			file		= "Buttons/button-normal.svg"		
			border		= { 1,1,1,1 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = LEFT
            }

            image {
            function    = EXTENSION
            state       = ACTIVE
			file		= "Buttons/button-normal.svg"		
			border		= { 1,1,1,1 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = RIGHT
            }



            image {
            function    = EXTENSION
			file		= "Notebook/tab-bottom-active.svg"		
			border		= { 2,2,2,6 }
            stretch     = TRUE
            gap_side    = TOP
            }

            image {
            function    = EXTENSION
			file		= "Notebook/tab-top-active.svg"		
			border		= { 2,2,6,2 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = BOTTOM
            }

            image {
            function    = EXTENSION
			file		= "Notebook/tab-right-active.svg"		
			border		= { 2,6,2,2 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = LEFT
            }

            image {
            function    = EXTENSION
			file		= "Notebook/tab-left-active.svg"		
			border		= { 6,2,2,2 }
			recolorable	= TRUE
            stretch     = TRUE
            gap_side    = RIGHT
            }


# How to draw boxes with a gap on one side (ie the page of a notebook)

		image 
		{
		function			= BOX_GAP
		file				= "Notebook/notebook-top.svg" 
		border				= { 1,1,2,1 }
		stretch				= TRUE
		gap_file   			= "Assets/NoColor.png"
		gap_border 			= { 0,0,0,0 }
		gap_side			= TOP
		}

		image 
		{
		function			= BOX_GAP
		file				= "Notebook/notebook-bottom.svg"
		border				= { 1,1,1,2 }
		stretch				= TRUE
		gap_file   			= "Assets/NoColor.png"
		gap_border 			= { 0,0,0,0 }
		gap_side			= BOTTOM
		}

		image 
		{
		function			= BOX_GAP
		file				= "Notebook/notebook-left.svg"
		border				= { 2,1,1,1 }
		stretch				= TRUE
		gap_file   			= "Assets/NoColor.png"
		gap_border 			= { 0,0,0,0 }
		gap_side			= LEFT
		}

		image 
		{
		function			= BOX_GAP
		file				= "Notebook/notebook-right.svg" 
		border				= { 1,2,1,1 }
		stretch				= TRUE
		gap_file   			= "Assets/NoColor.png"
		gap_border 			= { 0,0,0,0 }
		gap_side			= RIGHT
		}

# How to draw the box of a notebook when it isnt attached to a tab

		image 
		{
		function			= BOX
		file				= "Notebook/notebook.svg"
		border				= { 1,1,1,1 }
		stretch				= TRUE
		}
    }
}
