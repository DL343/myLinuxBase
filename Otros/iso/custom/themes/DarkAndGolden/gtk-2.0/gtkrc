style "spinbutton"
{
	xthickness = 4
	ythickness = 4

			# Normal:
			base[NORMAL]        = "#000000"
            text[NORMAL]    	= @text_color

			# Selected:
            base[SELECTED]	    = "#E5E5E5"
            text[SELECTED]	    = "#731E00"

			# Active:
			base[ACTIVE]	    = "#000000"
			text[ACTIVE]	    = @text_color

			# insensitive:
			base[INSENSITIVE]   = "#2D3237"
            text[INSENSITIVE] 	= "#8A9599"

	engine "pixmap"
	{
		image { function = ARROW }

		image
		{
		function			= BOX
        state               = NORMAL
		detail				= "spinbutton_up"
		file				= "SpinButton/button.svg"
		border				= { 1,1,2,1 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-up.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = PRELIGHT
		detail				= "spinbutton_up"
		file				= "SpinButton/button.svg"
		border				= { 1,1,2,1 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-up-prelight.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = ACTIVE
		detail				= "spinbutton_up"
		file				= "SpinButton/button.svg"
		border				= { 1,1,2,1 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-up-active.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = INSENSITIVE
		detail				= "spinbutton_up"
		file				= "SpinButton/button.svg"
		border				= { 1,1,2,1 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-up-insensitive.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}



		image
		{
		function			= BOX
        state               = NORMAL
		detail				= "spinbutton_down"
		file				= "SpinButton/button_down.svg"
		border				= { 1,1,1,2 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-down.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = PRELIGHT
		detail				= "spinbutton_down"
		file				= "SpinButton/button_down.svg"
		border				= { 1,1,1,2 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-down-prelight.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = ACTIVE
		detail				= "spinbutton_down"
		file				= "SpinButton/button_down.svg"
		border				= { 1,1,1,2 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-down-active.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}

		image
		{
		function			= BOX
        state               = INSENSITIVE
		detail				= "spinbutton_down"
		file				= "SpinButton/button_down.svg"
		border				= { 1,1,1,2 }
		stretch				= TRUE
        overlay_file		= "SpinButton/arrow-down-insensitive.svg"
        overlay_border		= { 0,0,0,0 }
        overlay_stretch		= FALSE
		}


	# SPIN ENTRY ##############
        image {
        function 	= SHADOW
        detail   	= "entry"
        state    	= NORMAL
        shadow   	= IN
		file		= "SpinButton/spinbutton.svg"
		border   	= { 4,4,4,4 }
        stretch  	= TRUE
        }
        image {
        function 	= SHADOW
        detail   	= "entry"
        state    	= INSENSITIVE
        shadow   	= IN
		file		= "SpinButton/spinbutton-insensitive.svg"
		border   	= { 4,4,4,4 }
        stretch  	= TRUE
        }
        image {
        function 	= SHADOW
        detail   	= "entry"
        state    	= ACTIVE
		file		= "SpinButton/spinbutton.svg"
		border   	= { 4,4,4,4 }
        stretch  	= TRUE
        }
        
            image {
            function        = FLAT_BOX
            detail          = "entry_bg"
            state           = NORMAL
            overlay_file    = "Entry/bg_entry.png"
            overlay_border  = { 0,0,0,0 }
            overlay_stretch = TRUE
            }
            image {
            function        = FLAT_BOX
            detail          = "entry_bg"
            state           = INSENSITIVE
            overlay_file    = "Entry/bg_entry_insensitive.png"
            overlay_border  = { 0,0,0,0 }
            overlay_stretch = TRUE
            }
            image {
            function        = FLAT_BOX
            detail          = "entry_bg"
            state           = ACTIVE
            overlay_file    = "Entry/bg_entry.png"
            overlay_border  = { 0,0,0,0 }
            overlay_stretch = TRUE
            }
    }
}
