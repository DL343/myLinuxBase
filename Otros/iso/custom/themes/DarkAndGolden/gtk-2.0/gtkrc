style "treeview"
{
	GtkWidget::wide-separators              = 1
	GtkWidget::separator-width              = 0
	GtkWidget::separator-height             = 10

	GtkTreeView::grid-line-width 			= 1
	GtkTreeView::tree-line-width 			= 1
	GtkTreeView::tree-line-pattern 			= "\001\001"
	GtkTreeView::grid-line-pattern 			= "\001\001"


        base[NORMAL]        = @base_color
        text[NORMAL]    	= @fg_color

        base[ACTIVE]        = @selected_bg_color
        text[ACTIVE]        = @selected_fg_color
        
        base[SELECTED]      = @selected_bg_color
        text[SELECTED]      = @selected_fg_color

        base[INSENSITIVE]   = @base_color
        text[INSENSITIVE]   = "#8B9EA8"

		# borders-CheckRadio
        bg[NORMAL]    		= shade(2.0, @selected_bg_color)
		# checkradio
        bg[SELECTED]        = shade(1.30, @selected_bg_color)
        bg[ACTIVE]        	= shade(1.30, @selected_bg_color)
        bg[INSENSITIVE]     = "#8B9EA8"

		# Arrows
        fg[NORMAL] 			= "#FFFFFF"
        fg[PRELIGHT] 	    = "#FCDA2B"
        fg[ACTIVE]          = "#FFFFFF"
		fg[INSENSITIVE]     = "#97A4A8"

        engine "murrine"
        {
			focus_color 		= @base_color
            textstyle 			= 0
            text_shade 			= 1.0
			arrowstyle			= 1
			expanderstyle 		= 0
			roundness 			= 0
			separatorstyle 		= 0 	#solid line
			listviewstyle 		= 1 	#dotted
			rgba 				= TRUE 	#rgba enabled
			contrast			= 1.0
			lightborder_shade 	= 1.0
			highlight_shade 	= 1.0
			gradient_shades		= { 1.0, 1.0, 1.0, 1.0 }
			gradient_colors 	= FALSE
			border_shades       = { 1.0, 1.0 }
			border_colors 		= { shade(1.35, @selected_bg_color), shade(1.35, @selected_bg_color) }
        }
}
